@model Garage3.Web.Models.ViewModels.CreateCustomerViewModel
@{
    ViewData["Title"] = "Create Customer";
}

<!-- Razor view contains a form with input fields for capturing the first name, last name, and social 

security number of a customer. It uses the CreateCustomerViewModel as the model for data binding. -->

<h2>Create Customer</h2>

<form asp-action="CreateCustomer" method="post">
    <div class="input-group inputs">
        <label asp-for="FirstName" class="control-label"></label>
        <input type="text" asp-for="FirstName" class="form-control"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="input-group inputs">
        <label asp-for="LastName" class="control-label"></label>
        <input type="text" asp-for="LastName" class="form-control"/>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="input-group inputs">
        <label asp-for="SocialNum" class="control-label"></label>
        <input type="text" asp-for="SocialNum" class="form-control" />
        <span asp-validation-for="SocialNum" class="text-danger"></span>
    </div>
    <input type="submit" value="Create Customer">
</form>
