@model Garage3.Web.Models.ViewModels.CreateCustomerViewModel
@{
    ViewData["Title"] = "Create Customer";
}

<h2>Create Customer</h2>

<form asp-action="CreateCustomer" method="post">
    <div class="input-group inputs">
        <label asp-for="FirstName" class="control-label"></label>
        <input type="text" asp-for="FirstName" class="form-control"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="input-group inputs">
        <label for="LastName">Last Name:</label>
        <input type="text" name="LastName" required>
    </div>
    <div class="input-group inputs">
        <label for="SocialNum">Social Security Number:</label>
        <input type="text" name="SocialNum" pattern="^(19|20)\d{2}(0[1-9]|1[0-2])(0[1-9]|[12]\d|3[01])[-]\d{4}$" required>
    </div>
    <input type="submit" value="Create Customer">
</form>
